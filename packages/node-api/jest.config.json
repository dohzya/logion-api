{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "test"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!@polkadot|@babel)"
  ],
  "testRunner": "jest-jasmine2",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
