{
  "name": "@logion/node-api",
  "version": "0.10.0",
  "description": "logion API",
  "main": "dist/index.js",
  "packageManager": "yarn@3.2.0",
  "type": "module",
  "scripts": {
    "build": "yarn lint && tsc",
    "lint": "yarn eslint src/**",
    "test": "jest",
    "integration-test": "docker-compose up -d && NODE_OPTIONS=--loader=ts-node/esm jasmine --config=jasmine-integration.json ; docker-compose down",
    "generate:defs-meta": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --endpoint ws://localhost:9944 --input ./src/interfaces/ --package @logion/node-api/dist/interfaces",
    "generate:meta": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --endpoint ws://localhost:9944 --output ./src/interfaces/ --package @logion/node-api/dist/interfaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logion-network/logion-api.git",
    "directory": "packages/node-api"
  },
  "keywords": [
    "logion",
    "api"
  ],
  "author": "Logion Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@polkadot/api": "^9.10.1",
    "@polkadot/util": "^10.2.1",
    "@polkadot/util-crypto": "^10.2.1",
    "@types/uuid": "^8.3.4",
    "fast-sha256": "^1.3.0",
    "uuid": "^8.3.2"
  },
  "bugs": {
    "url": "https://github.com/logion-network/logion-api/issues"
  },
  "homepage": "https://github.com/logion-network/logion-api/packages/node-api#readme",
  "devDependencies": {
    "@polkadot/typegen": "^9.10.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/jasmine": "^4.0.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.20.0",
    "jasmine": "^4.3.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jest": "^28.1.3",
    "jest-jasmine2": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "displayName": "Node API"
  }
}
